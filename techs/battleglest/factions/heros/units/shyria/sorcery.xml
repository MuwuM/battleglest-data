<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="1" />
		<height value="1" />
		<max-hp value="100" regeneration="1"/>
		<max-ep value="0" regeneration="0"/>
		<armor value="0" />
		<armor-type value="stone"/>				
		<sight value="10" />
		<time value="10" />
		<multi-selection value="true" />
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
		</properties>
		<light enabled="false" />
		<unit-requirements/>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="200"/>
		</resource-requirements>
		<resources-stored />		
		<image path="images/icon.bmp"/>
		<image-cancel path="images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="false"/>
		<command-sounds enabled="false"/>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="40" />
			<animation path="models/sorcery_stand.g3d" />
			<animation path="models/sorcery_stand2.g3d" />
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="180" />
			<animation path="models/sorcery_move.g3d" />
			<particles value="true">
				<!--particle-file path="images/wind_particles.xml"/-->
			</particles>
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="produce"/>
			<name value="conjure_skill"/>		
			<ep-cost value="0"/>
			<speed value="450"/>
			<anim-speed value="40"/>
			<anim-progress-bound value="true"/>
			<animation path="models/sorcery_produce.g3d"/>
			<particles value="true" start-time="0.3" end-time="0.7">
				<particle-file path="images/rain_particles.xml"/>
			</particles>
			<sound enabled="false" start-time="0.3">
				<sound-file path="sounds/conjure1.wav"/>
				<sound-file path="sounds/conjure2.wav"/>
			</sound>
		</skill>
		<skill>
			<type value="die" />
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="90" />
			<animation path="models/sorcery_die.g3d" />
			<sound enabled="false" start-time="0">
			</sound>			
			<fade value="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="100"/>
			<animation path="models/sorcery_attack.g3d"/>
			<animation path="models/sorcery_attack2.g3d"/>
			<sound enabled="false"/>
			<attack-strenght value="65"/>
			<attack-var value="10"/>
			<attack-range value="8"/>
			<attack-type value="slashing"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.55"/>
			<projectile value="true">
				<particle value="true" path="images/particle_proj.xml"/>
				<sound enabled="false"/>
			</projectile>
    <splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="images/particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_ulti"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="100"/>
			<animation path="models/sorcery_attack.g3d"/>
			<sound enabled="false"/>
			<attack-strenght value="65"/>
			<attack-var value="10"/>
			<attack-range value="8"/>
			<attack-type value="slashing"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.55"/>
			<projectile value="true">
				<particle value="true" path="images/particle_proj2.xml"/>
				<sound enabled="false"/>
			</projectile>
    <splash value="true">
				<radius value="2"/>
				<damage-all value="true"/>
				<particle value="true" path="images/particle_splash2.xml"/>
			</splash>
		</skill>

	</skills>
	
	<!-- *** commands *** -->
	<commands>
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="images/cancel.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="rain" />
			<image path="images/rain.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="conjure_skill"/>
			<produced-unit name="_rain_diamond"/>
		</command>


		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="magic_ball"/>
			<image path="images/ulti.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_ulti"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>
	</commands>
</unit>

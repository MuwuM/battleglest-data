<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="2"/>
		<max-hp value="2750" regeneration="3"/>
		<max-ep value="1000" regeneration="10"/>
		<armor value="45"/>	
		<armor-type value="runes"/>
		<sight value="10"/>
		<time value="150"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="0"/>					
		</resource-requirements>
		<resources-stored/>
		<image path="images/firegolem.bmp"/>
		<image-cancel path="images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/every_step_is_burning_a_flower.ogg"/>
			<sound path="sounds/why_am_i_standing_on_ashes.ogg"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/fire_and_flames.ogg"/>
			<sound path="sounds/i_am_burning.ogg"/>
		</command-sounds>

	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="50"/>
			<animation path="models/golem_standing.g3d"/>
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
				<particle-file path="fire_particles2.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="80"/>
			<animation path="models/golem_walking.g3d"/>
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
				<particle-file path="fire_particles2.xml"/>
			</particles>
			<sound enabled="false" start-time="0">
			</sound> 

		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="60"/>
			<animation path="models/golem_attacking.g3d"/>
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
				<particle-file path="fire_particles2.xml"/>
			</particles>
			<sound enabled="false" start-time="0">
			</sound>
			<attack-strenght value="300"/>
			<attack-var value="200"/>
			<attack-range value="10"/>
			<attack-type value="fire"/>
			<attack-start-time value="0.4"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false">
				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="false"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
              
		<skill>
			<type value="die"/>	
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/golem_dying.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
			<sound enabled="false" start-time="0">
			
			</sound> 
                        <fade value="false"/>
		</skill>
		<skill>
			<type value="build"/>
			<name value="build_skill"/>		
			<ep-cost value="10"/>
			<speed value="3500"/>
			<anim-speed value="100"/>
			<animation path="models/golem_attacking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/nothing_can_cease_my_glow.ogg"/>
			</sound>	
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
		</skill>	
		
		
	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/firegolem_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
        <command>
			<type value= "build"/>
			<name value="fire_aura"/>
			<image path="images/archmage_static_fire.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<build-skill value="build_skill"/>
			<buildings>
                <building name="fireaura"/>		
			</buildings>
			<start-sound enabled="false"/>
			<built-sound enabled="false">						
			</built-sound>	
		</command>       
        <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	</commands>
</unit>
